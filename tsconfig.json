{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./static/js",
    "rootDir": "./src/ts",
    "declaration": false,
    "sourceMap": true,
    "removeComments": false
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "static",
    "venv"
  ]
}